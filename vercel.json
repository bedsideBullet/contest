{
	"version": 2,
	"builds": [
		{
			"src": "backend/src/app.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["backend/src/**"]
			}
		},
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": {
				"distDir": "frontend/dist"
			}
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "/backend/src/app.ts"
		},
		{
			"src": "/(.*)",
			"dest": "/frontend/$1"
		}
	]
}
